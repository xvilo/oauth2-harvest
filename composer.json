{
    "name": "xvilo/oauth2-harvest",
    "description": "Harvest OAuth 2.0 Client Provider for The PHP League OAuth2-Client",
    "license": "MIT",
    "authors": [
        {
            "name": "Sem Schilder",
            "email": "me@sem.computer",
            "homepage": "https://sem.design/"
        }
    ],
    "keywords": [
        "oauth",
        "oauth2",
        "client",
        "authorization",
        "authorisation",
        "harvest"
    ],
    "require": {
        "php": ">=5.6",
        "league/oauth2-client": "^2.2"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^2.0",
        "mockery/mockery": "^1.0",
        "m4tthumphrey/php-harvest-api": "^9.0.0",
        "php-http/guzzle6-adapter": "^1.1.1",
        "phpunit/phpunit": "^5.7 || ^6.0"
    },
    "suggest": {
        "m4tthumphrey/php-harvest-api": "For further API usage using the acquired OAuth2 token"
    },
    "autoload": {
        "psr-4": {
            "Omines\\OAuth2\\Client\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Omines\\OAuth2\\Client\\Test\\": "test/src/"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "3.x-dev"
        }
    }
}
